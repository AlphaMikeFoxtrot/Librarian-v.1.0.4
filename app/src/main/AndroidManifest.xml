<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anonymous.librarian">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IssueBookPhaseOne"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".IssuedBookPhaseTwo"
            android:screenOrientation="portrait"
            android:parentActivityName=".IssueBookPhaseOne"/>
        <activity android:name=".IssueBookFinalPhase"
            android:screenOrientation="portrait"
            android:parentActivityName=".IssuedBookPhaseTwo"/>
        <activity android:name=".ReturnBook"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ReturnBookFinalPhase"
            android:screenOrientation="portrait"
            android:parentActivityName=".ReturnBook"/>
        <activity android:name=".ViewSubscribers"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".SubscriberDetails"
            android:screenOrientation="portrait"
            android:parentActivityName=".ViewSubscribers"/>
        <activity android:name=".ViewCurrentlyIssuedBooks"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".EditSubscriberDetails"
            android:screenOrientation="portrait"
            android:parentActivityName=".SubscriberDetails"/>
        <activity android:name=".AddSubscriber"/>
    </application>

</manifest>