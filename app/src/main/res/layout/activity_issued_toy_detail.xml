<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="com.example.anonymous.librarian.IssuedToyDetail">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/issued_toy_details_toolbar">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-smallcaps"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="Issued Book details"
                android:textStyle="bold"
                android:gravity="center"/>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/issued_toy_details_toy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Toy Name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_margin="6dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Toy ID"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="TL/12/13"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/issued_toy_details_toy_id"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Issued To"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Fardeen Panjwani"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/issued_toy_details_issued_to_name"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subscriber ID"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="SB/Lib/132"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/issued_toy_details_issued_to_id"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Issued On"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2017.12.12"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/issued_toy_details_issued_on"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="RETURN"
                android:id="@+id/issued_toy_details_return_button"
                android:layout_marginBottom="6dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="BACK"
                android:id="@+id/issued_toy_details_back_button"
                android:layout_marginBottom="6dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/issued_toy_details_debugger" />

    </LinearLayout>

</ScrollView>
