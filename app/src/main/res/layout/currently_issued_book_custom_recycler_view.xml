<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    android:layout_margin="12dp"
    app:contentPadding="6dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/currently_issued_book_name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            tools:text="The spy who came in from the cold"
            android:ellipsize="end"
            android:textSize="18sp"
            android:lines="2"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/currently_issued_book_id"
            android:gravity="center_vertical"
            tools:text="SB-924"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Issued To"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Fardeen Sohil Panjwani"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/currently_issued_book_to"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Issued On"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="01-12-8549"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/currently_issued_book_on"
                android:gravity="start"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>