<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anonymous.librarian.IssueBookFinalPhase">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/issue_book_final_toolbar"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="REVIEW DETAILS"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-smallcaps"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ISSUED BOOK DETAILS"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BOOK NAME"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BOOK ID"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/issue_book_final_book_name"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                tools:text="And then there were none"
                android:layout_margin="12dp"/>

            <TextView
                android:id="@+id/issue_book_final_book_id"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="SB-983"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="subscriber details"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="16sp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="subscriber NAME"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subscriber ID"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/issue_book_final_subscriber_name"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                tools:text="Charles Charmichael"
                android:layout_margin="12dp"/>

            <TextView
                android:id="@+id/issue_book_final_subscriber_id"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="SB/Lib/983"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/issue_book_submit_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="sans-serif-smallcaps"/>

        <Button
            android:id="@+id/issue_book_reset_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="sans-serif-smallcaps"/>

        <Button
            android:id="@+id/issue_book_cancel_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:fontFamily="sans-serif-smallcaps"/>

    </LinearLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
